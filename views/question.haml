%li.question
  .question-header
    Nr. #{question[:number]} din #{question[:game_identifier]}
  .question-body
    = question[:text].gsub("\n", "<br />")
  .question-footer.collapsed
    .answer
      Răspuns: #{question[:answer]}
    - if question[:comment]
      .comment
        Comentariu: #{question[:comment]}
    .author
      Autor: #{question[:author]}
    %a.expand{href: "#"}
      Arată răspunsul